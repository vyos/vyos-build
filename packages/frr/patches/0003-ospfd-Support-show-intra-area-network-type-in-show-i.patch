+					buf1, or->cost, & or->u.std.area_id);
 			}
 			break;
 		default:
@@ -10680,7 +10681,8 @@ static void show_ip_ospf_route_network(struct vty *vty, struct ospf *ospf,
 									ospf->vrf_id));
 							json_object_string_addf(
 								json_nexthop,
-								"adv", "%pI4",
+								"advertisedRouter",
+								"%pI4",
 								&path->adv_router);
 						} else {
 							vty_out(vty,
@@ -10955,7 +10957,8 @@ static void show_ip_ospf_route_external(struct vty *vty, struct ospf *ospf,
 								path->ifindex,
